<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-
mapper.dtd">
<mapper namespace="com.nss.customer.menalldao.MenAllMapper">

	<!-- 남자 전체상품 목록 가져오기 -->
	<select id="allList" parameterType="com.nss.customer.menallvo.MenAllVO"
		resultType="com.nss.customer.menallvo.MenAllVO">
		SELECT productNo, productName, productCategory,
		productPrice
		from product_tb
	</select>

	<!-- 상세보기 -->
	<select id="allDetail" parameterType="com.nss.customer.menallvo.MenAllVO"
		resultType="com.nss.customer.menallvo.MenAllVO">
		SELECT
		productNo, productName, productCategory, productColor, productPrice, productInfo
		FROM product_tb
		WHERE productNo=#{productNo}
	</select>

</mapper>